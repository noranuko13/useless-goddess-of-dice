{
  "root": true,
  "env": {
    "node": true,
    "mocha": true
  },
  "extends": [
    "standard",
    "plugin:mocha/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "mocha"
  ],
  "rules": {
    "no-useless-constructor": "off"
  }
}
